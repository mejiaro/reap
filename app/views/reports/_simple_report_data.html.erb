<% if structured_report_data[:children].present? %>
  <table class="w-full bg-slate-50 border border-gray-400">
    <tbody>
      <%= render partial: "simple_report_section", locals: { children: structured_report_data[:children], level: 0 } %>
      <tr class="flex justify-between px-6 py-1 pl-3">
        <td>
          Total
        </td>
        <td>
          <span class="font-bold">
            <%= minutes_to_float structured_report_data[:total] %>
          </span>
        </td>
      </tr>
    </tbody>
  </table>
<% else %>
  <div class="w-full h-36 flex justify-center items-center bg-tastyWhiteLite">
    <h3 class="text-2xl md:text-3xl">
      <%= t('time.today') %>
      <%= t('task.no_data_in_this_period') %>
    </h3>
  </div>
<% end %>