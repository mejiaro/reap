<% if children.present? %>
  <% children.each do |group| %>
    <tr class="flex justify-between border-b-2 border-slate-200 px-6 py-1 bg-slate-<%= level %>00">
      <td>
        <span>
          <%= group[:title] %>
        </span>
      </td>
      <td>
        <span>
          <%= minutes_to_float group[:minutes] %>
        </span>
      </td>
    </tr>
    <% if group[:children].present? %>
      <%= render partial: "simple_report_section", locals: { children: group[:children], level: level + 1 } %>
    <% end %>
  <% end %>
<% end %>
