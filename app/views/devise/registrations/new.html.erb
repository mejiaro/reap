<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'flex min-h-full items-center justify-center py-12 px-4 sm:px-6 lg:px-8' }, turbo: false) do |f| %>
  <div class="w-full max-w-md space-y-8">
    <div>
      <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">Sign up</h2>
    </div>
    <% resource.errors.full_messages.each do |error| %>
      <div class="text-sm italic text-red-600">
        <%= error %>
      </div>
    <% end %>
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <div class="-space-y-px rounded-md shadow-sm">
      <div>
        <%= f.label :first_name, class: "sr-only" %>
        <%= f.text_field :first_name, id: "first-name", autocomplete: "given-name", required: true, class: "relative block w-full rounded-t-md border-0 py-1.5 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:z-10 focus:ring-2 focus:ring-inset focus:ring-seaGreenDark sm:text-sm sm:leading-6", placeholder: "First name" %>
      </div>
      <div>
        <%= f.label :last_name, class: "sr-only" %>
        <%= f.text_field :last_name, id: "last-name", autocomplete: "family-name", required: true, class: "relative block w-full border-0 py-1.5 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:z-10 focus:ring-2 focus:ring-inset focus:ring-seaGreenDark sm:text-sm sm:leading-6", placeholder: "Last name" %>
      </div>
      <div>
        <%= f.label :email, class: "sr-only" %>
        <%= f.email_field :email, id: "email-address", autocomplete: "email", required: true, class: "relative block w-full border-0 py-1.5 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:z-10 focus:ring-2 focus:ring-inset focus:ring-seaGreenDark sm:text-sm sm:leading-6", placeholder: "Email address" %>
      </div>
      <div>
        <%= f.label :password, class: "sr-only" %>
        <%= f.password_field :password, id: "password", autocomplete: "current-password", required: true, class: "relative block w-full border-0 py-1.5 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:z-10 focus:ring-2 focus:ring-inset focus:ring-seaGreenDark sm:text-sm sm:leading-6", placeholder: "Password" %>
      </div>
      <div>
        <%= f.label :password_confirmation, class: "sr-only" %>
        <%= f.password_field :password_confirmation, id: "password_confirm", autocomplete: "current-password", required: true, class: "relative block w-full border-0 py-1.5 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:z-10 focus:ring-2 focus:ring-inset focus:ring-seaGreenDark sm:text-sm sm:leading-6", placeholder: "Confirm password" %>
      </div>
      <div>
        <%= f.label :key, class: "sr-only" %>
        <%= f.password_field :key, id: "key", required: true, class: "relative block w-full rounded-b-md border-0 py-1.5 text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:z-10 focus:ring-2 focus:ring-inset focus:ring-seaGreenDark sm:text-sm sm:leading-6", placeholder: "Enter Key" %>
      </div>
    </div>

    <div>
      <button type="submit" class="group relative flex w-full justify-center rounded-md !bg-seaGreen py-2 px-3 text-sm font-semibold text-white hover:bg-seaGreenDark focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-seaGreenDark">
        <span class="absolute inset-y-0 left-0 flex items-center pl-3">
          <svg class="h-5 w-5 text-seaGreen group-hover:text-seaGreenDark" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M10 1a4.5 4.5 0 00-4.5 4.5V9H5a2 2 0 00-2 2v6a2 2 0 002 2h10a2 2 0 002-2v-6a2 2 0 00-2-2h-.5V5.5A4.5 4.5 0 0010 1zm3 8V5.5a3 3 0 10-6 0V9h6z" clip-rule="evenodd" />
          </svg>
        </span>
        Sign up
      </button>
    </div>
  </div>
  <button type='submit'></button>
<% end %>
