<div class="flex flex-col gap-y-4 w-full">
  <%# TODO: let's revamp our logo at the right time  %>
  <div class="flex gap-x-4 items-center">
    <svg class="svg-icon" width="35px" height="35px" viewBox="0 0 512 512" xmlns="http://www.w3.org/2000/svg">
      <path fill="currentColor" d="M257.563 25.156c353.16 276.87 16.918 408.895-87.875 293.25l-40.75 37.125 50.812 50.345c217.562 181.363 524.73-252.058 77.813-380.72zM110.75 364.28c-5.525 1.065-8.975 2.957-11.313 5.25-1.956 1.922-3.248 4.556-4.25 7.564l55.188 52.844c5.468-1.008 9.264-2.796 11.28-4.688 1.997-1.872 3.095-3.864 3.095-7.53l-54-53.44zm-24.72 30.314L30.407 445.28C13.67 472.28 45.1 506.478 81.5 489.94l51.53-50.282-47-45.062z" />
    </svg>
  </div>
  <span class="text-xl font-semibold text-gray-600">Sign in to your account</span>
  <div class="flex flex-col mt-4 gap-y-2">
    <span class="text-gray-600 text-sm">Sign in with</span>
    <div class="flex flex-row items-center gap-x-2">
      <%= render ButtonComponent.new(variant: :outline, class: "flex-1 gap-x-2") do %>
        <%= image_tag "google.svg" %>
        <span class="font-semibold text-sm text-gray-700">Google</span>
      <% end %>
      <%= render ButtonComponent.new(variant: :outline, class: "flex-1 gap-x-2") do %>
        <%= image_tag "github.svg" %>
        <span class="font-semibold text-sm text-gray-700">Google</span>
      <% end %>
    </div>
    <div class="relative my-4">
      <div class="absolute inset-0 flex items-center" aria-hidden="true">
        <div class="w-full border-t border-gray-200"></div>
      </div>
      <div class="relative flex justify-center text-sm font-medium leading-6">
        <span class="bg-gray-50 px-6 text-gray-600">Or continue with</span>
      </div>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "w-full") do |form| %>
      <div class="w-full flex gap-y-4 flex-col">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <div class="flex flex-col w-full gap-y-4 lg:gap-y-8">
          <%= render PhlexUI::Form::Item.new(class: "flex flex-col") do  %>
            <%= render PhlexUI::Label.new { "Email" } %>
            <%= form.email_field :email, autocomplete: "email", required: true, placeholder: "Email address", class: "border-gray-200 rounded-md w-full" %>
          <% end %>
          <%= render PhlexUI::Form::Item.new(class: "flex flex-col") do  %>
            <%= render PhlexUI::Label.new { "Password" } %>
            <%= form.password_field :password, autocomplete: "current-password", required: true, placeholder: "Password", class: "border-gray-200 rounded-md w-full" %>
          <% end %>
        </div>
        <div class="flex items-center justify-between mb-4">
          <div class="flex items-center">
            <%= form.label :remember_me, class: "ml-2 block text-sm text-gray-900" do %>
              <%= form.check_box :remember_me, class: "h-4 w-4 rounded border-gray-300 text-seaGreenDark focus:ring-seaGreenDark" %>
              Remember me
            <% end %>
          </div>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-sm font-medium text-primary" %>
        </div>
        <%= render ButtonComponent.new(type: "submit") { "Sign in" } %>
        <div class="text-sm  w-full text-center">
          <span>Don't have an account?</span>
          <%= link_to "Sign up", new_registration_path(resource_name), class: "font-semibold text-primary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
