<%= content_tag(:div, class: "py-4 flex justify-between items-center", id: dom_id(membership)) do %>
  <div class="flex flex-row gap-x-2">
    <div class="bg-gray-50 rounded-full w-10 h-10 flex justify-center items-center">
      <i class="uc-icon text-lg">&#xebb2;</i>
    </div>
    <div class="flex flex-col gap-y-1">
      <span class="text-sm text-gray-500 font-medium"><%= membership.user&.name %></span>
      <span class="text-xs"><%= membership.user&.email %></span>
    </div>
  </div>
  <%= render ButtonComponent.new(variant: :link, class: "text-red-700", path: delete_confirmation_workspace_project_membership_path(id: membership.id, project_id: membership.project_id), method: :post) { "Remove" } %>
<% end %>
