<%= render PhlexUI::Table::Row.new(id: dom_id(project)) do %>
  <%= render PhlexUI::Table::Cell.new do %>
    <div class="flex flex-col">
      <div class="flex flex-row items-center gap-x-1">
        <span class="font-medium text-gray-700 text-sm"><%= project.name %></span>
        <%= render PhlexUI::Badge.new(variant: project.billable_project ? :green : :gray, class: "!rounded-full flex gap-x-1") do %>
          <span><%= project.billable_project ? "Billable" : "Non-Billable" %></span>
        <% end %>
      </div>
      <div class="w-36 lg:w-48 xl:w-64 truncate">
        <span class="text-gray-500 text-xs"><%= project.description %></span>
      </div>
    </div>
  <% end %>
  <%= render PhlexUI::Table::Cell.new { project.client.name } %>
  <%= render PhlexUI::Table::Cell.new do %>
    <div>
      <span class="text-gray-400">NOK</span>
      <span class="font-medium"><%= project.billable_rate_nok %></span>
    </div>
  <% end %>
  <%= render PhlexUI::Table::Cell.new do %>
    <div class="flex flex-row gap-x-2">
      <%= render ButtonComponent.new(path: workspace_project_path(project), method: :get, variant: :outline, class: "!py-3") do %>
        <i class="uc-icon">&#xe9a8;</i>
      <% end %>
      <%= render ButtonComponent.new(path: edit_modal_workspace_project_path(project), method: :put, variant: :outline, class: "!py-3") do %>
        <i class="uc-icon">&#xe972;</i>
      <% end %>
      <%= render ButtonComponent.new(path: delete_confirmation_workspace_project_path(project), method: :post, variant: :outline, class: "!py-3") do %>
        <i class="uc-icon">&#xeb97;</i>
      <% end %>
    </div>
  <% end %>
<% end %>
