<%= content_tag(:div, class: "dialog-header-wrapper mb-8") do%>
  <%= content_tag(:div, class: "dialog-header-title-wrapper w-full text-center") do%>
    <%= content_tag(:h1, class: "dialog-header-title text-base mb-2 font-semibold") do%>
      <%= title %>
    <% end %>
    <% if content.present? %>
      <%= content %>
    <% elsif subtitle.present? %>
      <%= content_tag(:h2, class: "dialog-header-subtitle text-sm") do%>
        <%= subtitle %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
